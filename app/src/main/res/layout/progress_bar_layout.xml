<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/progress_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pbl_text_bottom_margin"
        android:layout_marginEnd="@dimen/pbl_text_right_margin"
        android:layout_marginLeft="@dimen/pbl_text_left_margin"
        android:layout_marginRight="@dimen/pbl_text_right_margin"
        android:layout_marginStart="@dimen/pbl_text_left_margin"
        android:layout_marginTop="@dimen/pbl_text_top_margin"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/pbl_text_size"
        tools:text="@string/progress_dialog_downloading_text" />

    <ProgressBar
        android:id="@+id/horizontal_progress_bar_id"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pbl_progress_bar_bottom_margin"
        android:layout_marginEnd="@dimen/pbl_progress_bar_right_margin"
        android:layout_marginLeft="@dimen/pbl_progress_bar_left_margin"
        android:layout_marginRight="@dimen/pbl_progress_bar_right_margin"
        android:layout_marginStart="@dimen/pbl_progress_bar_left_margin"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_determinate"
        android:secondaryProgress="0" />

</LinearLayout>